{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau fichier{% endblock %}

{% block body %}
    <h1>Créer un nouveau fichier</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.fichier) }}
        {{ form_row(form.facture) }}
        {{ form_row(form.devis) }}
        <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('fichier_index') }}" class="btn btn-secondary">Annuler</a>
{% endblock %}
