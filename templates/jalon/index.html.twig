{# templates/jalon/index.html.twig #}
{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/index.css') }}">
{% endblock %}

{% block title %}Liste des Jalons{% endblock %}

{% block body %}
    <h1>Liste des Jalons</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Date d'échéance</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for jalon in jalons %}
                <tr>
                    <td>{{ jalon.id }}</td>
                    <td>{{ jalon.nom }}</td>
                    <td>{{ jalon.dateEcheance ? jalon.dateEcheance|date('Y-m-d H:i:s') : 'Non défini' }}</td>
                    <td>{{ jalon.statut }}</td>
                    <td>
                        <a href="{{ path('jalon_show', { 'id': jalon.id }) }}">Voir</a>
                        <a href="{{ path('jalon_edit', { 'id': jalon.id }) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('jalon_new') }}">Nouveau Jalon</a>
{% endblock %}
